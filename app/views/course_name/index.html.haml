%h1 Course Names:

%table.table.table-condensed
  %tr
    %th Course
    %th Name
  - @courses.each do |course|
    %tr
      %td= course.subject_course
      - if can? :write, :all
        %td= (course.has_course_name? ? course.course_name : link_to("Add Course Name", new_course_name_path(subject_course: course.subject_course, return_to: course_name_index_path)))
